# Application Settings
APP_NAME="DeepCard API"
APP_VERSION="0.1.0"
DEBUG=true
SECRET_KEY="your-secret-key-here-change-in-production"

# Development Settings
USE_DOCKER=false
VENV_PATH=".venv"

# Database Settings
DATABASE_URL="sqlite:///./deepcard.db"
# For production, use PostgreSQL:
# DATABASE_URL="postgresql+asyncpg://username:password@localhost:5432/deepcard"

# Redis Settings
REDIS_URL="redis://localhost:6379/0"

# LLM Settings
OPENAI_API_KEY="your-openai-api-key"
OPENAI_MODEL="gpt-3.5-turbo"
OPENAI_MAX_TOKENS=1000

# DeepSeek Settings
DEEPSEEK_API_KEY="your-deepseek-api-key"
DEEPSEEK_MODEL="deepseek-chat"
DEEPSEEK_BASE_URL="https://api.deepseek.com/v1"

# LLM Default Settings
DEFAULT_LLM_PROVIDER="openai"
LLM_TIMEOUT=30
LLM_MAX_RETRIES=3

# Security Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM="HS256"

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Logging
LOG_LEVEL="INFO"

# Content Processing
MAX_CONTENT_LENGTH=100000  # Maximum content length in characters
DEFAULT_CARD_DIFFICULTY=1
MAX_CARDS_PER_GENERATION=20