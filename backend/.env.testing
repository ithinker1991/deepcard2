LLM_TEST_MODEL=deepseek-ai/DeepSeek-V3
MAX_LLM_TEST_CALLS=5

# 性能测试
ENABLE_PERFORMANCE_TESTS=false
PERFORMANCE_TEST_TIMEOUT=30