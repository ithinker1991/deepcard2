    <script>
        const API_BASE = 'http://localhost:8004/api/v1';
        let currentUserId = 'user1';
        let cards = [];

        // åˆå§‹åŒ–
        document.addEventListener('DOMContentLoaded', function() {
            refreshCards();
        });

        // åˆ‡æ¢æ ‡ç­¾é¡µ
        function switchTab(tabName) {
            // æ›´æ–°æ ‡ç­¾æŒ‰é’®çŠ¶æ€
            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('active');
            });
            event.target.classList.add('active');

            // æ›´æ–°å†…å®¹æ˜¾ç¤º
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('active');
            });
            document.getElementById(`${tabName}-tab`).classList.add('active');

            // å¦‚æœåˆ‡æ¢åˆ°åˆ—è¡¨é¡µï¼Œåˆ·æ–°å¡ç‰‡
            if (tabName === 'list') {
                refreshCards();
            }
        }

        // è·å–å½“å‰ç”¨æˆ·ID
        function getUserId() {
            return document.getElementById('userId').value;
        }

        // åˆ·æ–°å¡ç‰‡åˆ—è¡¨
        async function refreshCards() {
            currentUserId = getUserId();
            const container = document.getElementById('cards-container');

            try {
                const response = await fetch(`${API_BASE}/cards?user_id=${currentUserId}`);
                const data = await response.json();

                cards = data.cards || [];
                displayCards();
            } catch (error) {
                container.innerHTML = '<div class="error">åŠ è½½å¡ç‰‡å¤±è´¥: ' + error.message + '</div>';
            }
        }

        // æ˜¾ç¤ºå¡ç‰‡åˆ—è¡¨
        function displayCards() {
            const container = document.getElementById('cards-container');

            if (cards.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <h3>ğŸ“ è¿˜æ²¡æœ‰å¡ç‰‡</h3>
                        <p>åˆ›å»ºä½ çš„ç¬¬ä¸€å¼ å¡ç‰‡ï¼Œæˆ–ä½¿ç”¨AIç”ŸæˆåŠŸèƒ½ä»æ–‡æœ¬ç”Ÿæˆå¡ç‰‡</p>
                    </div>
                `;
                return;
            }

            const cardsHtml = cards.map(card => createCardHtml(card)).join('');
            container.innerHTML = `<div class="cards-grid">${cardsHtml}</div>`;
        }

        // åˆ›å»ºå¡ç‰‡HTML
        function createCardHtml(card) {
            const tags = card.tags.map(tag => `<span class="tag">${tag}</span>`).join('');
            const createdDate = new Date(card.created_at).toLocaleString('zh-CN');

            let contentHtml = '';
            if (card.card_type === 'basic') {
                contentHtml = `
                    <div class="card-front"><strong>é—®é¢˜:</strong> ${card.content.front}</div>
                    <div class="card-back"><strong>ç­”æ¡ˆ:</strong> ${card.content.back}</div>
                `;
            } else if (card.card_type === 'cloze') {
                contentHtml = `
                    <div class="card-front"><strong>å¡«ç©ºé¢˜:</strong> ${card.content.cloze_text || card.content.front}</div>
                    <div class="card-back"><strong>ç­”æ¡ˆ:</strong> ${card.content.cloze_answer || card.content.back}</div>
                `;
            } else if (card.card_type === 'qna') {
                contentHtml = `
                    <div class="card-front"><strong>é—®é¢˜:</strong> ${card.content.question || card.content.front}</div>
                    <div class="card-back"><strong>ç­”æ¡ˆ:</strong> ${card.content.answer || card.content.back}</div>
                `;
            } else if (card.card_type === 'concept') {
                const examples = card.content.examples ? card.content.examples.join(', ') : '';
                contentHtml = `
                    <div class="card-front"><strong>æ¦‚å¿µ:</strong> ${card.content.concept || card.content.front}</div>
                    <div class="card-back">
                        <strong>å®šä¹‰:</strong> ${card.content.definition || card.content.back}<br>
                        ${examples ? `<strong>ç¤ºä¾‹:</strong> ${examples}` : ''}
                    </div>
                `;
            }

            return `
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">${card.title}</h3>
                        <span class="card-type">${getCardTypeLabel(card.card_type)}</span>
                    </div>

                    <div class="card-content">
                        ${contentHtml}
                    </div>

                    <div class="card-meta">
                        <span>åˆ›å»ºæ—¶é—´: ${createdDate}</span>
                        <span>${tags}</span>
                    </div>

                    <div class="card-actions">
                        <button class="btn btn-danger" onclick="deleteCard('${card.id}')">åˆ é™¤</button>
                    </div>
                </div>
            `;
        }

        // è·å–å¡ç‰‡ç±»å‹æ ‡ç­¾
        function getCardTypeLabel(type) {
            const labels = {
                'basic': 'åŸºç¡€',
                'cloze': 'å¡«ç©º',
                'qna': 'é—®ç­”',
                'concept': 'æ¦‚å¿µ'
            };
            return labels[type] || type;
        }

        // åˆ›å»ºå¡ç‰‡
        async function createCard(event) {
            event.preventDefault();

            const title = document.getElementById('cardTitle').value;
            const cardType = document.getElementById('cardType').value;
            const front = document.getElementById('cardFront').value;
            const back = document.getElementById('cardBack').value;
            const tagsInput = document.getElementById('cardTags').value;
            const tags = tagsInput ? tagsInput.split(',').map(tag => tag.trim()) : [];

            let content = { front, back };

            // æ ¹æ®å¡ç‰‡ç±»å‹æ„å»ºå†…å®¹
            if (cardType === 'cloze') {
                content.cloze_text = document.getElementById('clozeText').value || front;
                content.cloze_answer = document.getElementById('clozeAnswer').value || back;
            } else if (cardType === 'qna') {
                content.question = document.getElementById('question').value || front;
                content.answer = document.getElementById('answer').value || back;
                content.front = 'é—®ç­”å¯¹';
                content.back = 'é—®ç­”å¯¹';
            } else if (cardType === 'concept') {
                content.concept = document.getElementById('concept').value || front;
                content.definition = document.getElementById('definition').value || back;
                const examplesInput = document.getElementById('examples').value;
                content.examples = examplesInput ? examplesInput.split(',').map(e => e.trim()) : [];
                content.front = 'æ¦‚å¿µ';
                content.back = 'æ¦‚å¿µ';
            }

            try {
                const response = await fetch(`${API_BASE}/cards?user_id=${currentUserId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        title,
                        card_type: cardType,
                        content,
                        tags
                    })
                });

                if (response.ok) {
                    showMessage('å¡ç‰‡åˆ›å»ºæˆåŠŸï¼', 'success');
                    document.getElementById('create-card-form').reset();
                    refreshCards();
                    switchTab('list');
                } else {
                    const error = await response.json();
                    showMessage('åˆ›å»ºå¤±è´¥: ' + (error.detail || 'æœªçŸ¥é”™è¯¯'), 'error');
                }
            } catch (error) {
                showMessage('åˆ›å»ºå¤±è´¥: ' + error.message, 'error');
            }
        }

        // ç”Ÿæˆå¡ç‰‡
        async function generateCards(event) {
            event.preventDefault();

            const text = document.getElementById('sourceText').value;
            const cardType = document.getElementById('genCardType').value;
            const provider = document.getElementById('llmProvider').value;
            const maxCards = parseInt(document.getElementById('maxCards').value);

            const container = document.getElementById('generated-cards-container');
            container.innerHTML = '<div class="loading">AIæ­£åœ¨ç”Ÿæˆå¡ç‰‡ï¼Œè¯·ç¨å€™...</div>';

            try {
                const response = await fetch(`${API_BASE}/cards/generate?user_id=${currentUserId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        text,
                        card_type: cardType,
                        provider,
                        max_cards: maxCards,
                        auto_save: true
                    })
                });

                if (response.ok) {
                    const result = await response.json();
                    showMessage(`æˆåŠŸç”Ÿæˆ ${result.total_saved} å¼ å¡ç‰‡ï¼`, 'success');
                    container.innerHTML = `
                        <div class="success">
                            <h3>ğŸ‰ ç”Ÿæˆå®Œæˆï¼</h3>
                            <p>å…±ç”Ÿæˆ ${result.total_generated} å¼ å¡ç‰‡ï¼ŒæˆåŠŸä¿å­˜ ${result.total_saved} å¼ </p>
                        </div>
                    `;
                    refreshCards();
                } else {
                    const error = await response.json();
                    container.innerHTML = `<div class="error">ç”Ÿæˆå¤±è´¥: ${error.detail || 'æœªçŸ¥é”™è¯¯'}</div>`;
                }
            } catch (error) {
                container.innerHTML = `<div class="error">ç”Ÿæˆå¤±è´¥: ${error.message}</div>`;
            }
        }

        // åˆ é™¤å¡ç‰‡
        async function deleteCard(cardId) {
            if (!confirm('ç¡®å®šè¦åˆ é™¤è¿™å¼ å¡ç‰‡å—ï¼Ÿ')) {
                return;
            }

            try {
                const response = await fetch(`${API_BASE}/cards/${cardId}?user_id=${currentUserId}`, {
                    method: 'DELETE'
                });

                if (response.ok) {
                    showMessage('å¡ç‰‡åˆ é™¤æˆåŠŸ', 'success');
                    refreshCards();
                } else {
                    const error = await response.json();
                    showMessage('åˆ é™¤å¤±è´¥: ' + (error.detail || 'æœªçŸ¥é”™è¯¯'), 'error');
                }
            } catch (error) {
                showMessage('åˆ é™¤å¤±è´¥: ' + error.message, 'error');
            }
        }

        // æ›´æ–°å¡ç‰‡ç±»å‹è¡¨å•
        function updateCardTypeForm() {
            const cardType = document.getElementById('cardType').value;
            const advancedFields = document.getElementById('advanced-fields');

            // éšè—æ‰€æœ‰é«˜çº§å­—æ®µ
            document.getElementById('cloze-fields').style.display = 'none';
            document.getElementById('qna-fields').style.display = 'none';
            document.getElementById('concept-fields').style.display = 'none';

            // æ ¹æ®å¡ç‰‡ç±»å‹æ˜¾ç¤ºå¯¹åº”å­—æ®µ
            if (cardType === 'cloze') {
                advancedFields.style.display = 'block';
                document.getElementById('cloze-fields').style.display = 'block';
            } else if (cardType === 'qna') {
                advancedFields.style.display = 'block';
                document.getElementById('qna-fields').style.display = 'block';
            } else if (cardType === 'concept') {
                advancedFields.style.display = 'block';
                document.getElementById('concept-fields').style.display = 'block';
            } else {
                advancedFields.style.display = 'none';
            }
        }

        // æ˜¾ç¤ºæ¶ˆæ¯
        function showMessage(message, type) {
            // ç§»é™¤ç°æœ‰æ¶ˆæ¯
            const existingMessage = document.querySelector('.error, .success');
            if (existingMessage) {
                existingMessage.remove();
            }

            // åˆ›å»ºæ–°æ¶ˆæ¯
            const messageDiv = document.createElement('div');
            messageDiv.className = type;
            messageDiv.textContent = message;

            // æ’å…¥åˆ°å®¹å™¨é¡¶éƒ¨
            const container = document.querySelector('.controls');
            container.insertBefore(messageDiv, container.firstChild);

            // 3ç§’åè‡ªåŠ¨ç§»é™¤
            setTimeout(() => {
                if (messageDiv.parentNode) {
                    messageDiv.remove();
                }
            }, 3000);
        }
    </script>
