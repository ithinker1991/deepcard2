# 测试模式: offline, local, integration, full
TEST_MODE=offline

# 功能开关
ENABLE_DATABASE_TESTS=false
ENABLE_LLM_TESTS=false
ENABLE_EXTERNAL_API_TESTS=false

# 数据库测试
